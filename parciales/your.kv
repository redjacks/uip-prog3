#:import par parcial
<YourWidget>:
	GridLayout:
		size: root.size
		cols: 1
		Label:
			font_size: '48sp'
			text: "QUIZ [color=ff3333][sub]de[/sub][/color] [color=3333ff][b]PAN[sup]v1[/sup][/b][/color]"
			markup: True
		Label:
			id: label1
			text: root.pregunta
			
		Button:
			id: button1
			padding: 10, 10
			text: 'Cierto'
			halign: 'center'
			valign: 'middle'
			text_size: self.size
			on_press: 
				root.sumarPts(1)
				root.change_text()
		Button:
			id: button2
			padding: 10, 10
			text: 'Falso'
			halign: 'center'
			valign: 'middle'
			text_size: self.size
			on_press: 
				root.sumarPts(0)
				root.change_text()